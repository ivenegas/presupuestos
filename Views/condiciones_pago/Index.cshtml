@model IEnumerable<espaciodiseno.Models.condiciones_pago>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Condiciones de pago</h2>
<p>
    <input type="button" value="(+) Agregar" class="btn btn-success" onclick="location.href='@Url.Action("Create", "condiciones_pago" )'" />
</p>
<table class="table">
    <tr>
        <th>
            Condiciones
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.con_nombre)
            </td>
            <td>

                @Html.ActionLink("Eliminar", "Delete", new { id = item.con_id })
            </td>
        </tr>
    }

</table>
